<h1>Here is a list of all our products</h1>

<h3>Product's List:</h3>

<table>

	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Category</th>
			<th colspan="3"></th>
		</tr>
	</thead>


  	<tbody>

		<% @products.each do |product| %>
			<tr>
				<td><%= link_to product.name, one_product_path(id: product.id) %></td>
				<td><%= number_to_currency(product.price) %></td>
				<td><%= link_to product.category, by_category_path(category: product.category) %></td>
			</tr>

		<% end %>
	</tbody>
</table>